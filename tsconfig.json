{
    "version": "2.2.1",
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "outDir": "lib",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}